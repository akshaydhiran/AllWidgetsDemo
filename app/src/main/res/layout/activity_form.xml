<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3ECE8080"
    android:orientation="vertical"
    tools:context=".FormActivity" >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goldmansachs1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/goldman2"/>
            <TextView
                android:id="@+id/applicationform"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="APPLICATION FORM"
                android:textAlignment="center"
                android:textSize="30dp"/>

            <EditText
                android:drawableStart="@drawable/name"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name "
                android:ems="10"
                android:inputType="textPersonName"/>
            <EditText
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:ems="10"
                android:inputType="textEmailAddress" />
            <EditText
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:ems="10"
                android:inputType="number"/>
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:drawableStart="@drawable/ic_gender_black_24dp"
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"/>
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"/>
                <RadioButton
                    android:id="@+id/others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Others"/>
            </RadioGroup>
            <EditText
                android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                android:id="@+id/contactnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:ems="10"
                android:inputType="phone" />
            <EditText
                android:drawableStart="@drawable/ic_home_black_24dp"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Address"
                android:ems="10"
                android:inputType="textPostalAddress"/>
            <EditText
                android:drawableStart="@drawable/ic_work_experience_black_24dp"
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Experience Years"
                android:ems="10"
                android:inputType="numberDecimal"/>
            <CheckBox
                android:id="@+id/checkbox"
                android:button="@drawable/black_square"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accept Terms and Conditions"/>
            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_weight="1"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>